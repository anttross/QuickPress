    <com.jce.ant.quickpress.GameView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#dddddd"
        android:id="@+id/gameView" />



    <TextView
        android:id="@+id/bestResultShowTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bestTimeShow"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
         />

    <TextView
        android:id="@+id/bestResultBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Best result"
        android:layout_alignTop="@+id/bestResultShowTime"
        android:layout_toLeftOf="@+id/bestResultShowTime"

        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/recentResultShowTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/recentTimeShow"
        android:layout_below="@+id/bestResultShowTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/recentResultBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recent result"
        android:layout_alignTop="@+id/recentResultShowTime"
        android:layout_alignRight="@+id/bestResultBtn"
        android:layout_alignEnd="@+id/bestResultBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsBtn"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/recentResultShowTime"
        android:layout_toStartOf="@+id/recentResultShowTime"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startBtn"
        android:layout_below="@+id/settingsBtn"
        android:layout_alignLeft="@+id/settingsBtn"
        android:layout_alignStart="@+id/settingsBtn"
        android:layout_marginTop="32dp" />
